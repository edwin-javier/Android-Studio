<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:background="@drawable/taller"
    tools:context=".VerRegistros">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Buscar por Nombre o Placa:"
        android:id="@+id/textView"
        android:textSize="20sp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="16dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/txtCriterio"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:background="@drawable/ovalo"
        android:textColor="#C8FF00"
        android:singleLine="true"
        android:cursorVisible="true"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:clickable="false"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="16dp"
        android:layout_centerHorizontal="true"
        android:hint="Nombre del Contacto" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="380dp"
        android:layout_height="40dp"
        android:text="Buscar"
        android:id="@+id/btnBuscar"
        android:layout_centerInParent="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="16dp"
        android:textColor="#FFFF00"
        android:background="@drawable/logear"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtCriterio"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/btnAgregar" />

    <Button
        android:id="@+id/btnAgregar"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@+id/txtCriterio"
        android:layout_alignEnd="@+id/txtCriterio"
        android:layout_centerInParent="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/logear"
        android:text="Agregar +"
        android:textColor="#FFFF00" />

    <ListView
        android:id="@+id/lvContactos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btnBuscar"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/listar"
        android:choiceMode="singleChoice"
        android:clickable="true"
        android:textColor="#FFFF00" />

</RelativeLayout>